<p id="notice"><%= notice %></p>

<p>
  <strong>Urlid:</strong>
  <%= @video.urlID %>
</p>
<% @video.urlID = @video.urlID.split("=")[1] %>

<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @video.urlID %>" frameborder="0" allowfullscreen></iframe>

<p>
  <strong>Thumbnail:</strong>
  <%= @video.thumbnail %>
</p>

<p>
  <strong>Order:</strong>
  <%= @video.order %>
</p>

<p>
  <input type="hidden" name="curric" value=<%= @video.curriculum_id %> class="curric">
  <input type="hidden" name="video" value=<%= @video.id %> class="video">
  <input type="hidden" name="user" value="5" class="user">
  <strong>Votes:</strong>

  <% @votes.each do |vote| %>
      <%= vote.value %>
      <% unless vote.user_id == 5 %>
        <button class="vote_button vote_up" value ="1">+1</button>
        <button class="vote_down vote_button" value= "-1">-1</button>
      <% end %>
      <% if vote.value == 1 %>
        <button class="vote_button vote_up" value ="0">+1</button>
        <button class="vote_down vote_button" value= "-1">-1</button>
      <% elsif vote.value == -1 %>
        <button class="vote_button vote_up" value ="1">+1</button>
        <button class="vote_down vote_button" value= "0">-1</button>


    <% end %>
  <% end %>
</p>


<p>
  <strong>Description:</strong>
  <%= @video.description %>
</p>

<p>
  <strong>Title:</strong>
  <%= @video.title %>
</p>

<p>
  <strong>Curriculum:</strong>
  <%= @video.curriculum %>
</p>

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
